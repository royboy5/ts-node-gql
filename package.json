    "lint": "eslint src -c .eslintrc.js --ext js,ts",
    "lint:fix": "npm run lint -- --fix",
    "prod": "NODE_ENV=production npm run clean && npm run build && node ./dist/index.js",
    "start": "nodemon"
  },
